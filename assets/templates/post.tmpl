{{define "style"}}
.social {
    position: fixed;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    padding: 12px 32px;
    box-sizing: border-box;
    text-align: right;
    font-size: 2em;
}
.main-content {
    width: 840px;
    box-sizing: border-box;
    float: left;
    position: relative;
    background-color: white;
    margin-bottom: 2em;
}
.main-content h1 {
    font-size: 2em;
}
.right-pane {
    float: right;
    width: 180px;
    box-sizing: border-box;
    padding: 0 24px 24px;
}
.right-pane p {
    margin-bottom: 1em !important;
}
.right-pane ul {
    list-style: none;
    margin-left: 0 !important;
}
.right-pane ul li {
    padding: 16px 0 !important;
    margin-bottom: 0 !important;
    border-bottom: 1px solid rgba(0,0,255,0.07);
}
pre {
    overflow: scroll;
    background-color: rgba(1,1,1,0.9);
    color: #AAA;
}
pre code {
    font-size: 16px;
    line-height: 1.5em;
    color: darkbrown;
}
.sub {
    opacity: 0.6;
}
#likey {
    color: #a99191;
}
#likey.active {
    color: red;
}
svg path {
    fill: #AAA;
}
{{end}}
{{define "script"}}
    {{if .User}}
        const csrfToken = document.getElementsByName("gorilla.csrf.Token")[0].value;
        document.querySelector('#likey').addEventListener('click', (e) => {
            e.preventDefault();
			const likey = e.target;

			let count = parseInt(document.querySelector('.lc').innerText, 10);
			if (likey.className === 'active') {
				document.querySelector('.lc').innerText = count - 1;
				likey.className = '';
			} else {
				document.querySelector('.lc').innerText = count + 1;
				likey.className = 'active';
			}

            (async () => {
                const id = '{{.Post.ID}}';
                resp = await axios({
					url: `/like/${id}`,
					method: 'put',
					data: {},
                    headers: {
                        'X-CSRF-Token': csrfToken,
                    }
                })
                console.log(resp);
            })();
        });
    {{end}}
{{end}}
