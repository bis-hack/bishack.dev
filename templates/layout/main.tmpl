{{define "layout"}}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
        <title>bisdak.dev - {{.Title}}</title>
    <style>
    * {
        margin: 0;
        padding: 0;
        outline: none;
        border: 0;
    }

    html, body {
        height: 100%;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
        background-color: #efefef;
        font-size: 18px;
    }

    h1, h2, h3, h4, p {
        line-height: 2em;
        color: #333;
    }

    a, a:visited, a:active {
        text-decoration: none;
        color: blue;
    }
    {{template "style" .}}
    </style>
</head>

<body>
    {{template "content" .}}
</body>

</html>
{{end}}
