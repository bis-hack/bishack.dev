{{define "style"}}
    .sub {
        opacity: 0.5;
    }

    .title {
        letter-spacing: 1px;
        opacity: 0.91;
    }

    .box {
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .notfound {
        width: 400px;
        height: 300px;
        padding: 32px;
        border-radius: 5px;
        background-color: #ffffff;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .center {
        text-align: center;
    }
{{end}}
{{define "script"}}
{{end}}
{{define "content"}}
    <div class="box">
        <div class="notfound">
            <div class="center">
                <h1 class="title">Oops!</h1>
                <p class="sub">The page you're looking for could not be found</p>
                <p>&nbsp;</p>
                <p><a href="/">Go Back</a></p>
            </div>
        </div>
    </div>
{{end}}
